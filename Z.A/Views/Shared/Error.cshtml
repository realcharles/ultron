@model System.Web.Mvc.HandleErrorInfo
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>错误</title>
</head>
<body>

    @if (Model != null)
    {
        <p>
            <b>错误类型：</b> @Model.Exception.GetType().Name
        </p>
        <p><b>控制器:</b>@Model.ControllerName</p>
        <p><b>方法名:</b>@Model.ActionName</p>
        <p><b>异常信息:</b>@Model.Exception.Message</p>
        <p><b>Stack:</b>@Model.Exception.StackTrace</p>
    }
</body>
</html>
